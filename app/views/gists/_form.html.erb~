<%= form_for(@gist) do |f| %>
  <% if @gist.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@gist.errors.count, "error") %> prohibited this gist from being saved:</h2>

      <ul>
      <% @gist.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :kod %><br>
    <%= f.text_area :snippet, :class => "area" %>
  </div>
  <div class="field">
    <%= f.label :język %><br>
    <%= f.text_field :lang %>
  </div>
  <div class="field">
    <%= f.label :opis %><br>
    <%= f.text_field :description %>
  </div>
<br>
  <div class="actions">
    <%= f.submit 'Zatwierdź', data: { confirm: 'Czy na pewno zachować wprowadzone zmiany?' }, :class => "btn btn-success btn-lg" %>
  </div>
<br>
<% end %>
